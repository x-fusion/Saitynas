@model WebClient.Models.Inventory

@{
    ViewData["Title"] = "Inventoriaus redagavimas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="card w-50">
            <form asp-action="Edit" asp-route-id="@Model.ID">
                <div class="card-header p-0">
                    <nav class="navbar navbar-expand-md navbar-light p-1">
                        <h2 class="navbar-brand mx-auto font-weight-bolder">Inventoriaus redagavimas</h2>
                        <a asp-action="Index" class="btn close text-dark"><i class="fa fa-times" aria-hidden="true"></i></a>
                    </nav>
                </div>
                <div class="card-body">
                    <div class="form-inline">
                        <label asp-for="Title" class="control-label col-md-2"></label>
                        <input asp-for="Title" class="ml-md-1 form-control col-md-8" value="@Model.Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-inline mt-1">
                        <label asp-for="Amount" class="control-label col-md-2"></label>
                        <div class="input-group">
                            <input asp-for="Amount" class="col-md-4 ml-md-1 form-control" value="@Model.Amount"/>
                            <div class="input-group-append">
                                <span class="input-group-text">vnt.</span>
                            </div>
                        </div>
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="form-inline mt-1">
                        <label asp-for="Revenue" class="control-label col-md-2"></label>
                        <div class="input-group">
                            <input asp-for="Revenue" class="col-md-4 ml-md-1 form-control" value="@Model.Revenue"/>
                            <div class="input-group-append">
                                <span class="input-group-text">&euro;</span>
                            </div>
                        </div>
                        <span asp-validation-for="Revenue" class="text-danger"></span>
                    </div>

                    <div class="form-inline mt-1">
                        <label asp-for="TotalRentDuration" class="control-label col-md-2"></label>
                        <div class="input-group">
                            <input asp-for="TotalRentDuration" class="col-md-4 ml-md-1 form-control" value="@Model.TotalRentDuration"/>
                            <div class="input-group-append">
                                <span class="input-group-text">d.</span>
                            </div>
                        </div>
                        <span asp-validation-for="TotalRentDuration" class="text-danger"></span>
                    </div>

                    <div class="form-inline mt-1">
                        <label asp-for="MonetaryValue" class="control-label col-md-2"></label>
                        <div class="input-group">
                            <input asp-for="MonetaryValue" class="col-md-4 ml-md-1 form-control" value="@Model.MonetaryValue"/>
                            <div class="input-group-append">
                                <span class="input-group-text">&euro;</span>
                            </div>
                        </div>
                        <span asp-validation-for="MonetaryValue" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-long-arrow-alt-left"></i> Grįžti</a>
                        <button type="submit" value="Edit" class="btn btn-outline-primary ml-auto"><i class="fas fa-check"></i> Redaguoti</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
