@model IEnumerable<WebClient.Models.Warehouse>

@{
    ViewData["Title"] = "Sandėlių peržiūra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Sandėliai</h1>

<p>
    <a asp-action="Create">Įtraukti naują</a>
</p>
<table class="table table-responsive-md table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th class="text-center w-25">Operacijos</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td class="text-center">
                    <div class="btn-group">
                        @Html.ActionLink("Užsakymai", "Orders", new { id = item.ID }, new { @class = "btn btn-outline-dark" })
                        @Html.ActionLink("Redaguoti", "Edit", new { id = item.ID }, new { @class = "btn btn-outline-primary" })
                        @Html.ActionLink("Peržiūrėti", "Details", new { id = item.ID }, new { @class = "btn btn-outline-secondary" })
                        @Html.ActionLink("Šalinti", "Delete", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
