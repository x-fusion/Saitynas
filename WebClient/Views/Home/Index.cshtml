@{
    ViewData["Title"] = "Pagrindinis";
}

<div class="text-center">
    <h1 class="display-4">Sveiki atvykę</h1>
    <img src="https://i.ytimg.com/vi/6O9ihi7VRlw/hqdefault.jpg" class="img-fluid" alt="resp-image" />
</div>
<div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="Register">
                <div class="modal-header">
                    <h5 class="modal-title" id="registerModalLabel">Naujas vartotojas</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-inline">
                        <label for="FirstName">Vardas:</label>
                        <input id="FirstName" name="FirstName" class="form-control col-md-12" placeholder="Petras">
                        <span for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-inline">
                        <label for="LastName">Pavardė:</label>
                        <input id="LastName" name="LastName" class="form-control col-md-12" placeholder="Petraitis">
                        <span for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-inline">
                        <label for="Email">El. paštas:</label>
                        <input id="Email" name="Email" class="form-control col-md-12" placeholder="email@example.com">
                        <span for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-inline">
                        <label for="Password">Slaptažodis:</label>
                        <input id="Password" name="Password" type="password" class="form-control col-md-12" placeholder="Slaptažodis">
                        <span for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-inline">
                        <label for="PasswordRepeat">Pakartokite:</label>
                        <input id="PasswordRepeat" type="password" name="PasswordRepeat" class="form-control col-md-12" placeholder="Slaptažodio patvirtintimas">
                        <span for="PasswordRepeat" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer justify-content-end">
                    <button type="button" class="btn btn-secondary mr-md-auto" data-dismiss="modal">Uždaryti</button>
                    <button type="submit" class="btn btn-primary">Registruotis</button>
                </div>
            </form>
        </div>
    </div>
</div>